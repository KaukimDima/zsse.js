import React, { Component } from 'react';
import './App.css';
import {createStore} from "redux";
const reducer = (state = {comments: 0}, action ) => {

  switch(action.type) {

    case "Add_comment":
    return {

      ...state,
      comments: state.comments +1
    };

    default:
    return state;
  }


  return state;

}

const store = createStore(reducer);

const action = {

  type: "Add_comment"

};

const action1 = {

  type: "Add_2comments"

};


